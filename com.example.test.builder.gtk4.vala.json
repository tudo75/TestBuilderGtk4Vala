{
    "app-id" : "com.example.test.builder.gtk4.vala",
    "runtime" : "org.gnome.Platform",
    "runtime-version": "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "testbuildergtk4vala",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "testbuildergtk4vala",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "branch": "main",
                    "url" : "https://github.com/tudo75/TestBuilderGtk4Vala.git"
                }
            ]
        }
    ]
}
